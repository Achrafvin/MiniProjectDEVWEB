@model AppStore.Models.User
@{
    ViewBag.Title = "Register";
}

<div class="row w-100 mx-0">
    <div class="col-lg-5 mx-auto">
        <div class="auth-form-light text-left py-5 px-4">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="text-center mt-4 font-weight-light">
                    @Html.ActionLink("Vous avez déjà un compte ? Connectez-vous !", "Login")
                </div>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-12">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg", placeholder = "Username *" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-12">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", placeholder = "E-mail *" })
                    </div>
                    <h6 class="text-danger">@ViewBag.Alert</h6>
                </div>
                
                <div class="form-group">
                    <div class="col-12">
                        @Html.PasswordFor(m => m.Password, new
                        {
                            @class = "form-control form-control-lg",
                       placeholder = "Mot de pass"
                   })
                    </div>
                </div>
                <div class="mt-3">
                    <input type="submit" value="Enregistrer" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" />
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

